{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve"
	},
	"include": [
		"pages/login/index.jsx",
		"pages/CreateEvents.tsx",
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"contracts/hardhat.config.ts",
		"pages/donation/index.jsx"
	],
	"exclude": [
		"node_modules"
	]
}